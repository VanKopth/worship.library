generator client {
  provider   = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())

  login    String
  password String

  createdAt DateTime? @default(now())
}

model Song {
  id Int @id @default(autoincrement())

  songTitle String?
  songText  String
  audioUrl  String?

  createdAt DateTime? @default(now())
}
